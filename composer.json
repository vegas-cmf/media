        "vegas-cmf/forms" : "1.*",
        "spekkionu/wideimage" : "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "4.0.*",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Vegas\\": "src/",
            "Vegas\\Tests\\": "tests/"
